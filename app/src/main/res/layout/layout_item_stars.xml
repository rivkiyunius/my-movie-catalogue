<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/d8">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_movie"
        android:layout_width="@dimen/d110"
        android:layout_height="@dimen/d160"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageRoundedSquare" />

    <TextView
        android:id="@+id/tv_character"
        style="@style/title_medium"
        android:layout_width="@dimen/d110"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@id/img_movie"
        app:layout_constraintTop_toBottomOf="@id/img_movie" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/body_medium"
        android:layout_width="@dimen/d110"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@id/tv_character"
        app:layout_constraintTop_toBottomOf="@id/tv_character" />
</androidx.constraintlayout.widget.ConstraintLayout>